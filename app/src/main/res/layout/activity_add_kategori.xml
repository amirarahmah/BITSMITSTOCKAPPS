<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".barang.AddKategoriActivity">

    <TextView
        android:id="@+id/tambah_kategori_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="24dp"
        android:text="Tambah Kategori"
        android:textSize="20sp" />

    <ImageView
        android:clickable="true"
        android:id="@+id/kategori_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tambah_kategori_tv"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_add" />

    <EditText
        android:id="@+id/kategori_et"
        android:layout_toRightOf="@id/kategori_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/tambah_kategori_tv"
        android:layout_marginTop="16dp"
        android:lines="1"/>

    <Button
        android:textColor="#fff"
        android:background="@color/colorAccent"
        android:id="@+id/button_selesai"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="selesai"/>

</RelativeLayout>