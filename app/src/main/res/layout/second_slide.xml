<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:id="@+id/imageViewSlide"
        android:layout_marginTop="150dp"
        android:src="@drawable/ic_password"
        android:layout_centerHorizontal="true"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide2_title"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/imageViewSlide"
        android:gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:id="@+id/slide_title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide2_des"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/slide_title"
        android:gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:id="@+id/slide_des"/>

</RelativeLayout>